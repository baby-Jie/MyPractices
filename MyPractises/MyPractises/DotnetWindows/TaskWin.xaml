<Window x:Class="MyPractises.DotnetWindows.TaskWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPractises.DotnetWindows"
        mc:Ignorable="d"
        Title="TaskWin" Height="300" Width="300">
    <StackPanel>
        <Button Content="Task.Run" Name="btnTaskRun" Click="btnTaskRun_Click"></Button>
        <Button Content="Task.RunWithRes" Name="btnTaskRunWithRes" Click='btnTaskRunWithRes_Click'></Button>
        <Button Content="TaskFactory.StartNew" Name="btnTaskFactory" Click="btnTaskFactory_Click"></Button>
        <TextBox Name="tbShowResult"></TextBox>
    </StackPanel>
</Window>
